{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Next.js: debug server-side with Database",
      "type": "node-terminal",
      "request": "launch",
      "command": "yarn concurrently \"yarn dev\" \"docker-compose --env-file .env -f docker/docker-compose.yml up db\""
    },
    {
      "name": "Database: Run Only",
      "type": "node-terminal",
      "request": "launch",
      "command": "docker-compose --env-file .env -f docker/docker-compose.yml up db"
    },
    {
      "name": "Next.js: debug server-side",
      "type": "node-terminal",
      "request": "launch",
      "command": "yarn dev"
    },
    {
      "name": "Next.js: debug server-side with Stripe",
      "type": "node-terminal",
      "request": "launch",
      "command": "yarn dev && stripe listen --forward-to localhost:3000/api/webhook"
    },
    {
      "name": "Next.js: debug client-side",
      "type": "msedge",
      "request": "launch",
      "url": "http://localhost:3000"
    },
    {
      "name": "Next.js: debug full stack",
      "type": "node-terminal",
      "request": "launch",
      "command": "yarn dev",
      "serverReadyAction": {
        "pattern": "started server on .+, url: (https?://.+)",
        "uriFormat": "%s",
        "action": "debugWithEdge"
      }
    }
  ]
}
